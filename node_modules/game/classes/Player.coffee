class Player
  constructor: ->
    @hp = 20
    @maxHp = 20

  getHp: ->
    return @hp

  takeDamage: (dmg) ->
    console.log 'Player Taking Damage', dmg
    @hp -= dmg
    if @hp < 0
      @hp = 0

  getSaveData: ->
    return {
      hp: @hp
      maxHp: @maxHp
    }

  loadData: (data) ->
    @hp = data.hp
    @maxHp = data.maxHp

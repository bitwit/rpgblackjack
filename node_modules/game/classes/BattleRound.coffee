class BattleRound
  constructor: (playerTurn) ->
    @isOver = no
    @playerTurn = playerTurn #who's turn is it right now?
    @playerCompleteStatuses = [no,no]

  endPlayerTurn: ->
    @playerCompleteStatuses[@playerTurn] = yes

    if @playerCompleteStatuses[0] and @playerCompleteStatuses[1]
      @isOver = yes
    else
      #swap turn
      @playerTurn = Number !@playerTurn

  getSaveData: ->
    return {
      isOver: @isOver
      playerTurn: @playerTurn
      playerCompleteStatuses: @playerCompleteStatuses
    }

  loadData: (data) ->
    @isOver = data.isOver
    @playerTurn = data.playerTurn #who's turn is it right now?
    @playerCompleteStatuses = data.playerCompleteStatuses


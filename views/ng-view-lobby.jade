div.view.lobby-container

  h2 Welcome, {{username}}

  //button(class="back hidden-{{isInRoom}}", ng-click="mainMenu()")
    span.title Back


  div(ng-switch on="isInRoom")
    div.lobby-options(ng-switch-default)
      h3 New Game

      div.main-options
        button.coop-computer(ng-click="singlePlayer()")
          span.title Play against Computer

      div.available-games
        button.coop-new(ng-click="newRoom()")
          span.title Play against Human
        ul.games-list
          li.game(ng-repeat="game in games")
            strong.player-name {{game.player1}}
            button.join(ng-click="joinGame(game)") Join Game

    div.lobby-room(ng-switch-when="true")
      h2 One moment while a partner joins your game...
      img.loader(src="/static/img/ajax-loader.gif")
      button.coop-cancel(ng-click="cancelRoom()")
        span.title Cancel Game